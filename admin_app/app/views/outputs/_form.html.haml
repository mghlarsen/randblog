= form_for @output do |f|
  - if @output.errors.any?
    #error_explanation
      %h2= "#{pluralize(@output.errors.count, "error")} prohibited this output from being saved:"
      %ul
        - @output.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :ngram
    = f.text_field :ngram
  .actions
    = f.submit 'Save'
