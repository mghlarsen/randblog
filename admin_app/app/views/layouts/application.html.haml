!!! 5
%html
  %head
    %title AdminApp
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %header
      .floater
        - flash.each do |name, msg|
          - if msg.is_a?(String)
            = content_tag :div, msg, id: "flash_#{name}"
        %nav
          = render 'shared/navigation'
    %section#main
      = yield
